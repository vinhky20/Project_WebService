<div class="mt-4">
    <h3>Chỉnh sửa bài viết</h3>
    <form class="mt-4" method="POST" action="/posts/{{post._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên bài viết</label>
            <input type="text" class="form-control" value="{{post.name}}" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description">Mô tả bài viết</label>
            <textarea class="form-control" id="description" name="description"
                style="height: 3rem">{{post.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{post.videoId}}" id="videoId" name="videoId" />
        </div>
        <div class="form-group">
            <label for="level">Chi tiết bài viết</label>
            <textarea type="text" class="form-control" value="{{post.level}}" id="level" name="level"
                style="height: 200px;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>