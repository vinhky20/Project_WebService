<div class="mt-4">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic">{{post.name}}</h1>
          <p class="lead my-3">{{post.description}}</p>
          <p class="lead mb-0"><a href="#detail" class="text-white font-weight-bold">Continue reading...</a></p>
        </div>
      </div>
      <iframe width="100%" height="600" src="https://www.youtube.com/embed/{{post.videoId}}"
        title="YouTube video player" frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>

      <div class="blog-post">
        <h2 class="blog-post-title">{{post.name}}</h2>

        <p id="detail">{{post.level}}</p>
      </div>
    </div>
  </div>
</div>