<div class="mt-4">
  <div class="jumbotron jumbotron-fluid text-center"
    style="background-image: url(https://adflex.vn/wp-content/uploads/2020/05/Travel-blogger.jpg);height: 50vh; background-repeat: no-repeat; background-size: cover; background-position: center">
    <div class="container">
      <h1 class="display-4" style="color: white;">Travel is a part of life</h1>
      <p class="lead" style="color: white;">Make the world change</p>
    </div>
  </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://i-english.vnecdn.net/2020/01/10/shutterstock632565119-15786447-9372-8657-1578644902_680x0.jpg"
          class="d-block w-100" alt="photo-img" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Can Tho</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="http://static.asiawebdirect.com/m/bangkok/portals/vietnam/homepage/ho-chi-minh-city/weather/pagePropertiesImage/ho-chi-minh-weather.jpg.jpg"
          class="d-block w-100" alt="photo-img" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Ho Chi Minh</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="https://www.pullman-danang.com/wp-content/uploads/sites/86/2018/09/AP13-R%E1%BB%93ng-V%C3%A0ng-Phun-L%E1%BB%ADa.jpg"
          class="d-block w-100" alt="photo-img" />
        <div class="carousel-caption d-none d-md-block">
          <h5>Da Nang</h5>
          <p>Some representative placeholder content for the first slide.</p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>

  <div class="row" style="margin-top: 1rem;">
    {{#each posts}}
    <div class="col-sm-6 col-lg-3" style="margin-bottom: 1rem;">
      <div class="card card-post-item">
        <a href="/posts/{{this.slug}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
        </a>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>